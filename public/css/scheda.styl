// Start New Scheda Card
.newScheda
  padding 0px
//Sidebar of excercise
#list-esercizi
  padding: 10px
  position: fixed;
  overflow: auto;
  height: 92%
  .collapsible
    background: back
    padding: 5px
  .collapsible-header
    background: none
    text-transform: capitalize;
    border-bottom: 2px solid backtwo
  .collapsible-body
    border: 0
    padding: 10px
    ul li
      margin-bottom: 5px
  img
    width: 100% !important
  .tabs
    background: backtwo
  .tab.tab a.active
    background: back
  > div
    margin-top: -14px
    background: back
.excercises
  .col.s3
    // background: white
    align-self: auto;
    margin-bottom:10px
    padding: 0px
    display: inline-block;

.esercizi ul li
  border 3px solid black
  width: 31%
  color: white
  display: inline-block;
  margin: 1%
  img
    display: inline-block;
    height: auto;
    max-width: 100%;
    vertical-align: middle;
.cardScheduler
  overflow: auto
  // padding-left: 40px !important
  height: 92%
  float: right !important
  form
    input#cardName
      margin-left: 25%
      width: 50%
      text-align: center
      font-size: 20px
      color: backthree
  .newDay
    color: backtwo
    i
      cursor: pointer;
  img
    width: 100%

  .row.selected
    background-color: backtwo
  .excercises
    display: flex;
    align-items: center;
    flex-flow: wrap;
    width: 100%
  .excercise-item
    display: inline-table;
    margin:10px 0 0 1%;
    flex-grow: 1;
    border: 2px solid ba
    border-radius: 5px
    padding: 5px
    width: calc(100% * (1/4) - 10px - 1px);
    .img.valign-wrapper
      border-top: 1px dotted backthree
      height: 210px
    input
      width: 100%!important
      background: none
      text-align: center;
      #esercizio_tipo
        text-align: center;
      .x
        border-bottom: 1px solid backthree!important
