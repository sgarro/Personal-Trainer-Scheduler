block content
	.contacts
		for element, index in db
			.new
				a(href='get/' + element.id)
				.client.yellowfont.card
					.person.card-image
						img.activator(src='uploads/'+element.avatar)
					.card-content
						span.card-title.activator= element.nome+' ' 
						br
						span.card-title.activator=element.cognome 

					.card-reveal
						i.material-icons.right.card-title close
						if element.indirizzo
							p.card-title= element.indirizzo
						if element.peso 
							p= element.peso + 'kg'
						if element.peso
							p= element.telefono
						a(href='clients/#{element._id}') GESTISCI SCHEDA

block out
		#annotator.fixed-action-btn
			a(href='/clients/new'): button.btn-floating.btn-large.navcolor: i.large.mdi-content-add
