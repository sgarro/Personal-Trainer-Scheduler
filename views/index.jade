block content
	.contacts.col.s4
		table.striped
			thead
				tr
					th(data-field='Avatar') Avatar 
					th(data-field='Nome') Nome
					th(data-field='Cognome') Cognome
					th(data-field='Peso') Peso
					th(data-field='Attivo') Attivo
					th(data-field='Fine Scheda') Fine Scheda
					
			tbody
				tr(ng-repeat='client in clients').repeat-client
					td 
						img.circle.responsive-img(ng-src='uploads/{{client.avatar}}')
					td {{client.nome}}
					td {{client.cognome}}
					td {{client.peso}}
					td Si
					td 24/5
					td
						i.fa.fa-pencil
					td
						i(ng-click='removeClient(client)').material-icons delete
						
