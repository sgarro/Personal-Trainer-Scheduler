			label(for="feb").month-picker-label Feb
			input(type="radio" name="month" value="mar" id="mar")
			label(for="mar").month-picker-label Mar
			input(type="radio" name="month" value="apr" id="apr")
			label(for="apr").month-picker-label Apr
