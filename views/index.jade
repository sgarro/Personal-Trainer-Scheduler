			input(type="radio" name="month" value="nov" id="nov")
			label(for="nov").month-picker-label Nov
			input(type="radio" name="month" value="dec" id="dec")
			label(for="dec").month-picker-label Dec
	.newScheda.hide
		.col.s4#list-esercizi
			ul.tabs
				li.tab.col6
					a(href='#Fronte').active Fronte
				li.tab.col6
					a(href='#Dorso')|Dorso
			#Fronte
				ul.collapsible(data-collapsible='expandable')
					for img, type in files
						li
							.collapsible-header
								p=type
							.collapsible-body
								ul(id=type)
									for file in img
										li 
											img(src='../images/Esercizi'+file)
			#Dorso
				
		.col.s8
	block out
		#annotator.fixed-action-btn
			a(href='#addClient').modal-trigger: button.btn-floating.btn-large.navcolor: i.large.mdi-content-add
		#addClient.modal
			.modal-content
				mixin inputdiv(icon, field)
								.row
									.input-field
										i.material-icons.prefix= icon
										input.validate(id= field
										type='text'
										name= field
										ng-model='formData.'+field
										)
										label(for='icon_prefix')= field
				.row.clientInfo.white
							form#newClient(enctype="multipart/form-data")
								+inputdiv('account_circle', 'nome' )
								+inputdiv('account_circle', 'cognome' )
								+inputdiv('phone', 'telefono')
								+inputdiv('mail', 'mail') 
								//- inserire thumb
								+inputdiv('room', 'peso')
								+inputdiv('room', 'altezza')
								+inputdiv('room', "eta")
								+inputdiv('room', 'note')
								.file-field.input-field
									.btn
										span Avatar
										input(type="file", name="sampleFile" file-model='sampleFile' )
											
											
										
								button(ng-click='createClient()').btn.waves-effect.waves-light.right Submit
									i.material-icons.right send
