extends ../layout

block content
	h1.
		#{title}
	form#form(method="post",action="/blobs")
		p Name: 
			input#inputName(type="text", placeholder="ex. John Smith", name="gino")
		p Badge:
			input#inputBadge(type="number", placeholder="ex. 123456", name="badge")
		p DOB: 
			input#inputDob(type="date", name="dob")
		p Are You Loved?: 
			input#inputIsLoved(type="checkbox", name="isloved")
		p
			button#btnSubmit(type="submit") submit
